extends ../extends/layout

block content
    include ../includes/content/indexRoute/header
    // Content Page
    .container.mt-5.pt-5
        if itemFind
            // Tất Cả Anime
            .anime-all
                .row
                    .col-12.col-lg-12.col-md-12.col-xl-12
                        a.title-link(href='/allanime')
                            p.h5.mt-5.mb-3
                                | t&#x1EA5;t c&#x1EA3; anime! &nbsp;
                                i.fas.fa-angle-right
                                a.title-link(href='/anime/' + itemFind.url)= " " + itemFind.title + "!" 
                                    | &nbsp; 
                                    i.fas.fa-angle-right
                                a.title-link(href='#')= " Tập " + itemFind.epUpdate
            // Close Tất Cả Anime
            .video-player.mt-3
                div
                    div(style='position:relative; padding-bottom: 40.25%; overflow:hidden;')
                        .sizing
                            iframe(src= itemFind.urlvideo, width='100%', height='100%', frameborder='0', scrolling='auto', allowfullscreen='', style='position:absolute;')
            center
                .like-and-more.mb-5
                    .reload
                        a(href='https://www.facebook.com/anitvdotga')
                            button.btn.btn-light(type='button')
                                | Report 
                                i.fas.fa-exclamation-triangle
                        //- a(href='/anime/tejina-senpai/tap-' + (itemFind.epUpdate - 1))
                        a(href='/anime/' + itemFind.url + '/tap-' + (itemFind.epUpdate - 1))
                            button.btn.btn-light(type='button')
                                | Previous 
                                i.fas.fa-step-backward
                        //- a(href='/anime/tejina-senpai/tap-' + (itemFind.epUpdate))
                        a(href='/anime/' + itemFind.url + '/tap-' + (itemFind.epUpdate))
                            button.btn.btn-light(type='button')
                                | Reload 
                                i.fas.fa-redo
                        //- a(href='/anime/tejina-senpai/tap-' + (itemFind.epUpdate -1 + 2))
                        a(href='/anime/' + itemFind.url + '/tap-' + (itemFind.epUpdate -1 + 2))
                            button.btn.btn-light(type='button')
                                | Next 
                                i.fas.fa-step-forward
                        a(href= itemFind.urlvideo, target='_blank')
                            button.btn.btn-light(type='button')
                                | Download 
                                i.fas.fa-download
