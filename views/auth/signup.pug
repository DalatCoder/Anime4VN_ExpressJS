extends ../extends/layout

block content
    //- header
    include ../includes/content/indexRoute/header
    .pt-5
    .container.font-default
        h2.pt-5.mt-5 Tạo tài khoản

        if errors
            each error in errors
                .alert.alert-danger= error

        form(action="/auth/signup", method="POST", enctype="multipart/form-data")
            .form-group
                label(for="name") Họ tên
                input#name.form-control(name="name", type="text", value=values ? values.name : "")
            
            .form-group
                label(for="email") Email
                input#email.form-control(name="email", type="text", value=values ? values.email : "")
            
            .form-group
                label(for="password") Mật khẩu
                input#password.form-control(name="password", type="password", value=values ? values.password : "")
            
            .form-group
                label(for="avatar") Tải lên ảnh đại diện (^^)
                input#avatar.form-control-file(name="avatar", type="file")

            button.btn.btn-primary Create
