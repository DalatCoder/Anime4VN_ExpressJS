.row.d-flex.justify-content-start    
    each item in itemsAnime
        .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-6.mb-4
            .item-anime
                a(href= "/anime/" + item.url)
                    img.anime-thumbnail(src=item.image, alt='img')
                    .overlay
                        .play-button
                            img(src='/assets/images/play-button.png')
                        .info
                            .title
                                a(href='#')= item.title
                            .ep
                                a(href='#')= item.status 
                        each arr in arrFavorite
                            if(arr == item.url)
                                a(href="/favorite/detete/anime" + item.id)
                                    .count
                                        .view-count(style="color: white; font-size: 150%;")
                                            .overlay-count(style="padding-right: 7px;")
                                                i.fas.fa-heart.fa-sm
                            else if(arr != item.url)
                                a(href="/favorite/anime/" + item.id)
                                    .count
                                        .view-count(style="color: white; font-size: 150%;")
                                            .overlay-count(style="padding-right: 7px;")
                                                i.far.fa-heart.fa-sm
                        a(href="/favorite/anime/" + item.id)
                            .count
                                .view-count(style="color: white; font-size: 150%;")
                                    .overlay-count(style="padding-right: 7px;")
                                        i.far.fa-heart.fa-sm