.row.d-flex.justify-content-start
    each item in items
        .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-6.mb-4
            .item-anime__update
                a(href='#')
                .overlay
                    a(href='#')
                        .play-button
                            img(src='/assets/images/play-button.png')
                    .info
                        a(href='#')
                        .title
                            a(href='#')
                            a(href='#')= item.title
                        .ep
                            a(href='#')= item.epUpdate 
                            a(href="#") /
                            a(href='#')= item.epLast
                    .count
                        .time-count
                            .overlay-count
                                i.far.fa-clock.fa-sm
                                    span= item.time 