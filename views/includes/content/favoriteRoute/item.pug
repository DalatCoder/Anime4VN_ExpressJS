.row.d-flex.justify-content-start    
    each item in items
        .col-xl-3.col-lg-4.col-md-6.col-sm-6.col-6.mb-4
            .item-anime
                a(href= "/anime/" + item.url)
                    img.anime-thumbnail(src=item.image, alt='img')
                    .overlay
                        .play-button
                            img(src='/assets/images/play-button.png')
                        .info
                            .title
                                a(href='#')= item.title
                            .ep
                                a(href='#')= item.status
                        a(href="/delete/favorite/anime/" + item.id)
                            .count
                                .view-count(style="color: white; font-size: 150%;")
                                    .overlay-count
                                        i.fas.fa-times.fa-sm
                