extends ../extends/layout

block content
    //- header
    include ../includes/content/indexRoute/header
    .pt-5
    .container.font-default
        h2.pt-5.mt-5 Cập Nhật Anime Mới ^^

        if errors
            each error in errors
                .alert.alert-danger= error

        form(action="/itemsUpdate/create", method="POST", enctype="multipart/form-data")
            .form-group
                label(for="title") Title
                input#title.form-control(name="title", type="text", value=values ? values.title : "")
            
            .form-group
                label(for="image") Image
                input#image.form-control-file(name="image", type="file")
            
            .form-group
                label(for="epUpdate") Tập mới nhất
                input#epUpdate.form-control(name="epUpdate", type="text", value=values ? values.epUpdate : "")

            .form-group
                label(for="epLast") Tập kết thúc
                input#epLast.form-control(name="epLast", type="text", value=values ? values.epLast : "")
            
            .form-group
                label(for="time") Thời gian Tập
                input#time.form-control(name="time", type="text", value=values ? values.time : "")

            button.btn.btn-primary Create